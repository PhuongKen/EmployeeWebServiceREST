<Page x:ConnectionId='1'
    x:Class="WCFConsumer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WCFConsumer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
                            >
    <Page.Resources>
        <DataTemplate x:Key="GridViewEmployeeDataTemplate">
            <Grid Width="300" Background="#FF5D5AA0" Height="102">
                <StackPanel Margin="15,5,0,0" Orientation="Horizontal" VerticalAlignment="Top">
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Name:"
                               VerticalAlignment="Top" FontSize="20"/>
                    <TextBlock VerticalAlignment="Top" TextWrapping="NoWrap" Text="{Binding firstName}"
                               Margin="5,0,0,0" FontSize="20"/>
                    <TextBlock VerticalAlignment="Top" TextWrapping="NoWrap" Text="{Binding lastName}"
                               Margin="5,0,0,0" FontSize="20"/>
                </StackPanel>

                <StackPanel Margin="15,30,0,0" Orientation="Horizontal" VerticalAlignment="Top">
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Age:"
                               VerticalAlignment="Top" FontSize="20"/>
                    <TextBlock VerticalAlignment="Top" TextWrapping="NoWrap" Text="{Binding Age}"
                               Margin="5,0,0,0" FontSize="20"/>
                </StackPanel>
                <StackPanel Margin="15,55,0,0" Orientation="Horizontal" VerticalAlignment="Top">
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Address:"
                               VerticalAlignment="Top" FontSize="20"/>
                    <TextBlock VerticalAlignment="Top" TextWrapping="NoWrap" Text="{Binding address}"
                               Margin="5,0,0,0" FontSize="20"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <GridView x:ConnectionId='3' x:Name="GridViewEmployee" Margin="480,80,0,30"
                                                                      
                  ItemTemplate="{StaticResource GridViewEmployeeDataTemplate}" FontSize="30"/>
        <StackPanel Margin="100,80,0,0" Width="295" HorizontalAlignment="Left">
            <TextBlock TextWrapping="Wrap" Text="FirstName:" FontFamily="Segoe UI" FontSize="20"
                       FontWeight="Light" Margin="0,0,0,5"/>
            <TextBox x:ConnectionId='5' x:Name="TextBoxName" TextWrapping="Wrap" Margin="0,0,0,10" FontSize="20"/>

            <TextBlock TextWrapping="Wrap" Text="LastName:" FontFamily="Segoe UI" FontSize="20"
                       FontWeight="Light" Margin="0,0,0,5"/>
            <TextBox x:ConnectionId='6' x:Name="TextBoxSurname" TextWrapping="Wrap" Margin="0,0,0,10" FontSize="20"/>

            <TextBlock TextWrapping="Wrap" Text="Address:" FontFamily="Segoe UI" FontSize="20"
                       FontWeight="Light" Margin="0,5,0,0"/>
            <TextBox x:ConnectionId='7' x:Name="TextBoxCity" TextWrapping="Wrap" Margin="0,0,0,10" FontSize="20"/>

            <Grid Margin="0,0,0,10">
                <TextBlock TextWrapping="Wrap" Text="Age:" FontFamily="Segoe UI" FontSize="20"
                           FontWeight="Light" Margin="0,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBox x:ConnectionId='11' x:Name="TextBoxAge" TextWrapping="Wrap" Margin="43,0,0,0" HorizontalAlignment="Left"
                         VerticalAlignment="Top" FontSize="20"/>
            </Grid>
            <Button x:ConnectionId='8' x:Name="ButtonAdd" Content="Add new Employee" HorizontalAlignment="Left"
                    VerticalAlignment="Stretch" Margin="0,0,0,10" Width="295"                        
                    FontSize="20" Height="50"/>
            <Button x:ConnectionId='9' x:Name="ButtonDelete" Content="Delete Selected Employee" HorizontalAlignment="Left"
                    VerticalAlignment="Stretch" Margin="0,0,0,10" Width="295"                           
                    FontSize="20" Height="45"/>
            <Button x:ConnectionId='10' x:Name="ButtonModify" Content="Modify Selected Employee" HorizontalAlignment="Left"
                    VerticalAlignment="Stretch" Margin="0,0,0,10" Width="295"                           
                    FontSize="20" Height="43"/>
        </StackPanel>
        <ProgressBar x:ConnectionId='4' x:Name="ProgressBar" VerticalAlignment="Top" Visibility="Collapsed"/>
    </Grid>
</Page>



